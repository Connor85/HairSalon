<h1>All Clients</h1>

@if (@Model.Count == 0)
{
  <h4>No clients have been added yet!</h4>
}
@foreach (var client in Model)
{
  <h3><a href='/client/@client.GetId()'>@client.GetName()</a></h3>
}
<a href='/stylists/new'><button class='btn btn-warning'>Add Stylist</button></a>
<a href='/'><button class='btn btn-success'>Back Home</button></a>
