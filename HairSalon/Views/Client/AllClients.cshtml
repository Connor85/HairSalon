@{
  Layout = "_Layout";
}
    <div class="container">
      <h1>All Clients</h1>
    </hr>
      @if (@Model.Count == 0) {
      <h4>No clients have been added yet!</h4>
      } @foreach (var client in Model) {
      <ul>
        <h3>@client.GetName()</h3>
        </ul>
      }
      <a href="/clients/delete/all"><button class="btn btn-danger">Delete All Clients</button></a>
    </div>

