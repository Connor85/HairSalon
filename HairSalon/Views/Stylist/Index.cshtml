@{
  Layout = "_Layout";
}

<div class='container'>
  <h1>Hair Sytlists</h1>
  <hr />
  @if (@Model.Count == 0)
  {
    <h4>No stylists have been added yet!</h4>
  }
  @foreach (var stylist in Model)
  {
    <h3><a href='/stylist/@stylist.GetId()'>@stylist.GetName()</a></h3>
  }
  <hr />
  <a href='stylists/delete'><button class="btn btn-danger">DELETE ALL</button></a>
