<div class='container'>
    <h1>Stylist: @Model["selectedStylist"].GetName()</h1>
    <h3>Hire Date: @Model["selectedStylist"].GetHireDate()<h3>
    <hr />
    <h3>Clients:</h3>
    <ul>
        @foreach (var client in @Model["stylistClients"])
        {
            <h4><a href='/clients/@client.GetId()'>@client.GetName()</a></h4>
        }
    </ul>
    <h3>Specialties:</h3>
    <ul>
        @foreach (var specialty in @Model["stylistSpecialties"])
        {
            <h4>@specialty.GetDescription()</h4>
        }
    </ul>
    <a href='/stylists/@Model["selectedStylist"].GetId()/client/new'><button class='btn btn-danger'>Add Client</button></a>
    <a href='/stylists/@Model["selectedStylist"].GetId()/update'><button>Edit</button></a>
    <a href='/stylists'><button class='btn btn-info'>Back To Stylists</button></a>
    <a href='/stylists/@Model["selectedStylist"].GetId()/delete'><button>Delete</button></a>
    <a href="/"><button>Home</button></a>
</div>
