@{
  Layout = "_Layout";
}

<div class='container'>
    <h1>@Model["selectedStylist"].GetName()</h1>
    <h3>Hire Date: @Model["selectedStylist"].GetHireDate()<h3>
    <hr />
    <h3>Clients:</h3>
    <ul>
        @foreach (var client in @Model["stylistClients"])
        {
            <h4><a href='/clients/@client.GetId()'>@client.GetName()</a> | <a href="/clients/@client.GetId()/update">Edit</a> | <a href=/stylists/@client.GetId()/delete>Delete</a></h4>
        }
    </ul>
    <h3>Specialties:</h3>
    <ul>
        @foreach (var specialty in @Model["stylistSpecialties"])
        {
            <h4>@specialty.GetDescription()</h4>
        }
    </ul>
        <form class="form-group" action='/stylist/@Model["selectedStylist"].GetId()/specialty/new' method='post'>
            <label for='specialtyId'>Add a specialty</label>
            <select multiple class="form-control" id='specialtyId' name='specialtyId' type='text'>
                @foreach (var specialty in Model["allSpecialties"])
                {
                    <option value='@specialty.GetId()'>@specialty.GetDescription()</option>
                }
            </select>
            <button class="btn btn-warning"type='submit'>Add</button>
        </form>
</div>
